<Window x:Class="KiCadExcelBridge.FieldMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Field Mapping" Height="500" Width="850" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="FieldMappingsGrid"
                      Grid.Row="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      Margin="0,0,10,0"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      ItemsSource="{Binding FieldMappings}"
                      SelectedItem="{Binding SelectedMapping, Mode=TwoWay}">
                <DataGrid.Resources>
                    <Style TargetType="TextBox" x:Key="FieldNameTextBoxStyle">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="IsReadOnly" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFieldNameEditable}" Value="True">
                                <Setter Property="IsReadOnly" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="KiCad Field" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding FieldName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FieldNameTextBoxStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Source Column" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding ColumnSelections}"
                                          SelectedItem="{Binding SelectedColumnSelection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="DisplayName"
                                          Margin="0,0,5,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridCheckBoxColumn Header="Visible" Binding="{Binding Visible, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                    <DataGridCheckBoxColumn Header="Split" Binding="{Binding Split, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                    <DataGridTemplateColumn Header="" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="âœ•"
                                        Width="20"
                                        Height="20"
                                        Margin="2,0"
                                        Command="{Binding DataContext.RemoveFieldCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" 
                                        Visibility="{Binding CanRemove, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                <Button Content="+ Add Field" Margin="0,0,8,0" Click="AddField_Click"/>
                <Button Content="- Remove Field" Margin="0,0,8,0" Click="RemoveField_Click" IsEnabled="{Binding SelectedMapping.CanRemove}"/>
                <Button Content="Auto-Map" Margin="0,0,8,0" Click="AutoMap_Click"/>
                <Button Content="Clear Mapping" Click="ClearMapping_Click"/>
            </StackPanel>
        </Grid>

        <GroupBox Grid.Column="1" Header="Data Preview (First 5 Rows)" Margin="10,0,0,0">
            <DataGrid AutoGenerateColumns="True" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding PreviewView}"/>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
